{
  "version": 8,
  "name": "glyphs-sprite",
  "sources": {
    "local": {
      "type": "vector",
      "tiles": [
        "file://test/assets/{z}_{x}_{y}.pbf"
      ],
      "bounds": [
        12.61230469,
        47.78363486,
        12.65624966,
        47.81315452
      ],
      "minzoom": 13,
      "maxzoom": 13
    }   
  },
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "sprite": "mapbox://sprites/mapbox/bright-v9",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#ff0"
      }
    },
    {
      "id": "glyphs",
      "type": "symbol",
      "source": "local",
      "filter": ["==", ["get", "subclass"], "village"],
      "source-layer": "label",
      "layout": {
        "text-font": ["Open Sans Semibold"],
        "text-field": "{name}"
      }
    },
    {
      "id": "sprite",
      "type": "symbol",
      "source": "local",
      "filter": ["!=", ["get", "subclass"], "village"],
      "source-layer": "label",
      "layout": {
        "icon-image": "motorway_5",
        "icon-text-fit": "width",
        "icon-text-fit-padding": [0, 5, 0, 5],
        "text-field": "{name}",
        "text-font": ["Open Sans Semibold"]
      }
    }    
  ]
}